{
  "name": "@arabiyya/sarf",
  "version": "4.5.0",
  "description": "A library of Arabic morphology patterns for verbs and derived nouns.",
  "keywords": [
    "صرف",
    "sarf",
    "arabic",
    "morphology"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arabiyya-app/sarf.git"
  },
  "homepage": "https://github.com/arabiyya-app/sarf",
  "bugs": {
    "url": "https://github.com/arabiyya-app/sarf/issues",
    "email": "salaam@arabiyya.app"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js",
      "require": "./dist/helpers/index.cjs",
      "default": "./dist/helpers/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs",
      "default": "./dist/types.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js",
      "require": "./dist/constants.cjs",
      "default": "./dist/constants.js"
    }
  },
  "scripts": {
    "build": "bun build.ts",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bun": "latest",
    "bun-plugin-dts": "^0.3.0",
    "eslint": "^9.16.0",
    "prettier": "3.4.2",
    "typescript-eslint": "^8.18.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
